{
  "compilerOptions": {
    "target": "es2016",
    "module": "es2015",
    "outDir": "lib",

    "lib": [
      "dom",
      "dom.iterable",
      "es2016",
      "es2017.sharedmemory"
    ],

    "noImplicitAny": true,
    "newLine": "LF",

    "sourceMap": true,
    "declaration": true,
    "removeComments": true,

    "strict": true,

    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    "moduleResolution": "node"
  }
}
