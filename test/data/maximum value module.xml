<?xml version="1.0" encoding="utf-8"?>

<xmile version="1.0" level="1" xmlns="http://www.systemdynamics.org/XMILE">
	<header>
		<smile version="1.0"/>
		<vendor>isee systems</vendor>
		<product version="9.1.3" lang="en">iThink</product>
		<name>maximum value.itm</name>
		<copyright>(C) 2009 by isee systems, inc.</copyright>
	</header>

	<style>
		<flow>
			<non_negative/>
		</flow>
	</style>

	<simspecs>
		<start>0</start>
		<stop>60</stop>
		<dt>0.125</dt>
	</simspecs>

	<model name="Top_Level">
		<module name="Value"/>				<!-- Module name must match contained model name -->
		<aux name="test input" access="local">		<!-- Next two entities merely connect it up -->
			<eqn>TIME*SIN(TIME*PI/180)</eqn>
		</aux>
		<aux name="maximum" access="input">
			<eqn>0</eqn>
			<of>Value.maximum</of>
		</aux>
	</model>

	<model name="Value">
		<stock name="maximum" access="output">
			<eqn>0</eqn>
			<inflow>change</inflow>
		</stock>
		<flow name="change">
			<eqn>(input - maximum)/DT</eqn>
		</flow>
		<aux name="input" access="input">
			<eqn>RANDOM(10, 40)</eqn>
			<of>Top_Level.test_input</of>		<!-- doesn't appear until connected -->
		</aux>
	</macro>

	<macro filter=”flow” name=”non_negative”>
		<parm>flow</parm>
		<parm>value</parm>
		<eqn>IF value THEN MAX(flow, 0) ELSE flow</eqn>
	</macro>
</xmile>
